<div class = "container">
    <h1>Mysql dtabase connection and select query</h1>
    <h2>{{title}}</h2>
    <a href="/products/create-form" class="btn btn-success">Create Product</a>
    <br></br>
    <table class="table">
        <tr>
            <th>#ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>SKU</th>
            <th>Action</th>
        </tr>
        {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.product_name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.sku}}</td>
                <td>
                    <a href ="/products/edit-form/{{this.id}}" class= "btn btn-info btn-sm">Edit</a>
                    <a href ="/products/delete/{{this.id}}" class= "btn btn-danger btn-sm">Delete</a>
                </td>    
            </tr>
        {{/each}}
    </table>
</div>
